{
  "compilerOptions": {	
    "module": "commonjs",
    "lib": ["es2017"],
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": "./src",
	"outDir": "./lib",
	"paths": {
		"~/*":["src/*"]
	},
    "declarationDir": "./types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true
  },
  "exclude": ["./examples"]
}
